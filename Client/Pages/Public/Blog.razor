@page "/blog"

<Client.Components.Public.Shared.Navbar />

<main class="container min-vh-90 py-5">
	<div class="row">
		<div class="col">
			<h1 class="my-3">Blog</h1>
			<p>Click a category card to view the blog posts</p>
			<div class="row">

				@*Card 1*@
				<div class="col-md-4">
					<div class="card shadow mb-2">
						<img src="/assets/img/other/placeholder.jpg" class="card-img-top" alt="category thumbnail image" />
						<div class="card-body">
							<h3 class="card-title">Category Name 1</h3>
							<p class="card-text">Category Description</p>
						</div>
						<a href="/" class="btn btn-primary stretched-link">View Posts</a>
					</div>
				</div>


				@*Card 2*@
				<div class="col-md-4">
					<div class="card shadow mb-2">
						<img src="/assets/img/other/placeholder.jpg" class="card-img-top" alt="category thumbnail image" />
						<div class="card-body">
							<h3 class="card-title">Category Name 2</h3>
							<p class="card-text">Category Description</p>
						</div>
						<a href="/" class="btn btn-primary stretched-link">View Posts</a>
					</div>
				</div>

				@*Card 3*@
				<div class="col-md-4">
					<div class="card shadow mb-2">
						<img src="/assets/img/other/placeholder.jpg" class="card-img-top" alt="category thumbnail image" />
						<div class="card-body">
							<h3 class="card-title">Category Name 3</h3>
							<p class="card-text">Category Description</p>
						</div>
						<a href="/" class="btn btn-primary stretched-link">View Posts</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>

<Client.Components.Public.Shared.Footer />